{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "3.22.1"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "test": "lerna run test --stream",
    "start": "lerna run start --stream --parallel --scope={@stellar-design/deep-dependent,@stellar-design/dependent-component,@stellar-design/another-dependent,@stellar-design/fake-app,@stellar-design/fake-utils}",
    "bootstrap": "lerna bootstrap",
    "cut": "npm run lerna.version && npm run lerna.publish && npm run git.push",
    "lerna.version": "lerna version --conventional-commits --yes --no-push",
    "lerna.publish": "lerna publish from-package",
    "git.push": "git push --follow-tags",
    "clean": "npm run clean.npm && npm run clean.lockfiles && npm run clean.stencil-cache && npm run clean.dist",
    "clean.npm": "find . -name \"node_modules\" -exec rm -rf '{}' +",
    "clean.lockfiles": "find . -name \"package-lock.json\" -exec rm -rf '{}' +",
    "clean.stencil-cache": "find . -name \".stencil\" -exec rm -rf '{}' +",
    "clean.dist": "find . -name \"dist\" -exec rm -rf '{}' +"
  }
}
